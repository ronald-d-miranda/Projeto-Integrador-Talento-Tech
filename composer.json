{
    "name": "sistema-medico/app",
    "description": "Sistema de gestão médica com foco em agendamento, usuários, exames e histórico clínico",
    "type": "project",
    "require": {
        "php": "^8.0",
        "firebase/php-jwt": "^6.0",
        "vlucas/phpdotenv": "^5.5",
        "ext-pdo": "*",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

